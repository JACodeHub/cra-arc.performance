{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "log": true,
            "externalConsole": false,
            "pathMappings": {
                "/var/www/html/php": "${workspaceRoot}/php"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ]
        },
        {
            "name": "Local Process with Kubernetes",
            "type": "local-process-with-kubernetes.configuration",
            "request": "launch"
        }
    ]
}